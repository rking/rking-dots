#!/bin/zsh
export CFGDIR=~/src/config
showbanner() { [ -e .banner ] && cat .banner }
gitcd() {
    cd $1
    showbanner
    git pull
    git status
}
conceive() { command conceive "$@"; rehash }
emerge() { sudo emerge "$@"; rehash }

for n in mv cp man svn git; do alias $n="nocorrect $n"; done
alias ls='ls --classify --color=auto'
alias ll='ls -l'
alias la='ls -la'

alias standup='(echo -n "stand-up: "; randlist < ~/.st-haxors) | xclip'

alias pmf='perl Makefile.PL install_base=~/local' 

alias cdcfg="cd $CFGDIR"
alias CDcfg="gitcd $CFGDIR && make"
alias accessd="cd /var/log/apache-perl/; ls"
alias vv='vim ~/.vimrc'
alias vz='vim ~/.zshrc; source ~/.zshrc'
alias tl='test-less'
alias tlp='test-less --prove'
dict() { /usr/bin/dict -dall "$@" | less -F }
kiss() { ~/bin/kiss "$@"; rehash }
cd() { builtin cd "$@"; ~/bin/screentitle $(basename "$(pwd)")/; }
# vim() { /usr/bin/vim "$@"; screentitle $PWD }
viml='vim !! -l'

s50() { convert -sample 50% $1 $1 }
s75() { convert -sample 75% $1 $1 }

echo x | (grep x --color >/dev/null 2>&1) && alias grep='grep --color=auto'

alias cj=clipjoin
alias cb=clipbrowse
alias ce=clipedit

source ~/., # run ,h for help
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
