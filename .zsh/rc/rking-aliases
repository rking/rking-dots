#!/bin/zsh

# TODO: Pull these into their right *-dot places.

cd() {
    builtin cd "$@"
    local lspp=~/.../src/ls--/ls++
    [ -x $lspp ] && $lspp || true
}

for n in mv cp man svn git; do alias $n="nocorrect $n"; done

# TODO
# conceive() { command conceive "$@"; rehash }

showbanner() { [ -e .banner ] && cat .banner }
gitcd() {
    cd $1
    showbanner
    git pull
    git status
}

emerge() { $EMERGE_MAYBE_SUDO emerge "$@"; rehash }
alias euses='euses --colour'

alias ls='ls --classify --color=auto'

# I still kind of like this little feller.
# alias standup='(echo -n "stand-up: "; randlist < ~/.st-haxors) | xclip'

# TODO
# dict() { /usr/bin/dict -dall "$@" | less -F }

s50() { convert -sample 50% $1 $1 }
s75() { convert -sample 75% $1 $1 }

alias cj=clipjoin
alias cb=clipbrowse
alias ce=clipedit

# TODO
source ~/., # run ,h for help

